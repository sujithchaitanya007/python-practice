tasks = []

def add_task(task):
    tasks.append(task)
    print(f"âœ… Task '{task}' added successfully!")

def remove_task(task):
    if task in tasks:
        tasks.remove(task)
        print(f"âŒ Task '{task}' removed!")
    else:
        print(f"âš ï¸ Task '{task}' not found!")

def show_tasks():
    if tasks:
        print("\nğŸ“ Your To-Do List:")
        for idx, task in enumerate(tasks, start=1):
            print(f"{idx}. {task}")
    else:
        print("ğŸ“­ No tasks in your list!")

while True:
    print("\n=== To-Do List Menu ===")
    print("1. Add Task")
    print("2. Remove Task")
    print("3. Show Tasks")
    print("4. Exit")

    choice = input("Enter your choice (1-4): ")

    if choice == "1":
        task = input("Enter task: ")
        add_task(task)
    elif choice == "2":
        task = input("Enter task to remove: ")
        remove_task(task)
    elif choice == "3":
        show_tasks()
    elif choice == "4":
        print("ğŸ‘‹ Exiting... Have a productive day!")
        break
    else:
        print("âŒ Invalid choice, try again!")